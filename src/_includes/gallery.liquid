---
layout: base.liquid
---
<section class='container pt-32 pb-20'>
  <div class='flex mb-10'>
    <a class='flex items-center hover:opacity-60 transition duration-400' href='/'>
      <ion-icon class='text-primary text-4xl cursor-pointer mr-2' name='arrow-back-outline'></ion-icon>
      <span class='text-secondary'>Home</span>
    </a>
  </div>
  <div class='gallery flex'>
    <!-- columns -->
    <div class='grid-col sm:px-2 flex-1 grid-col--1'></div>
    <div class='grid-col px-2 flex-1 grid-col--2'></div>
    <div class='grid-col px-2 flex-1 grid-col--3 hidden sm:block'></div>
    <div class='grid-col px-2 flex-1 grid-col--4 hidden md:block'></div>
    {% for item in data.gallery %}
      <a data-lightbox='mygallery' data-aos='flip-left' href='{{settings.cloudinary_url}}/fl_progressive/q_auto:good{{item}}' class='grid-item mb-4 block overflow-hidden'>
        <img alt='gallery' class='w-full' src='{{settings.cloudinary_url}}/fl_progressive/q_auto:good{{item}}'>
      </a>
    {% endfor %}
  </div>
</section>
